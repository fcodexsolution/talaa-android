<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NavigationActivities.SettingActivity">

    <include layout="@layout/custom_action_bar" />

    <androidx.cardview.widget.CardView
        android:id="@+id/translaterCard"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:id="@+id/translatorLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/navigationColor"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:gravity="center|left"
                android:paddingStart="30dp"
                android:text="@string/menu_translator"
                android:textColor="@color/white"
                android:textSize="15sp"
                tools:ignore="RtlSymmetry" />

            <ImageView
                android:id="@+id/translatorIconImageView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:padding="10dp"
                android:src="@drawable/ic_navigation_translation" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:id="@+id/contactUsLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/navigationColor"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:gravity="center|left"
                android:paddingStart="30dp"
                android:text="@string/contact_us"
                android:textColor="@color/white"
                android:textSize="15sp"
                tools:ignore="RtlSymmetry" />

            <ImageView
                android:id="@+id/contactUsIconImageView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:padding="10dp"
                android:src="@drawable/ic_contact_us" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:id="@+id/faqLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/navigationColor"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/faqImageView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:gravity="center|left"
                android:paddingStart="30dp"
                android:text="@string/faq"
                android:textColor="@color/white"
                android:textSize="15sp"
                tools:ignore="RtlSymmetry" />

            <ImageView
                android:id="@+id/faqIconImageView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:padding="10dp"
                android:src="@drawable/ic_faq" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:id="@+id/privacyPolicyLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/navigationColor"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:gravity="center|left"
                android:paddingStart="30dp"
                android:text="@string/privacy_policy"
                android:textColor="@color/white"
                android:textSize="15sp"
                tools:ignore="RtlSymmetry" />

            <ImageView
                android:id="@+id/privacyPolicyIconImageView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:padding="10dp"
                android:src="@drawable/ic_privacy_policy" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>